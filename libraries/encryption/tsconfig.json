{
  "compilerOptions": {
    "incremental": true,
    "module": "CommonJS",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "newLine": "lf",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/*",
        "test/*",
        "jest.config.js"
      ]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist"
  ]
}
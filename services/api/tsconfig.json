{
  "compilerOptions": {
    "incremental": true,
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src",
    "test",
    "jest.config.js"
  ],
  "exclude": [
    "test/models",
    "dist"
  ]
}